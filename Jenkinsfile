pipeline
{
 agent any
   stages {
            stage('Repo phase'){
             steps{
               echo 'getting code from repo'
                  }
             }
            stage('build phase'){
            steps
              {
              echo 'Building the code'
              }
            }
            stage('Testing Phase'){
            steps
                {
             echo 'testing the code'
                }
            }
            stage('Deploy Phase'){
            steps
                {
               echo 'Deploying the code'
               }
             }
        }
}
